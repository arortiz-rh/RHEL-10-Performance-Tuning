FROM registry.redhat.io/rhel10/rhel-bootc:10.0-1750161981

# Create user accounts
RUN useradd -m -s /bin/bash Arm && \
    echo 'Arm:pass' | chpasswd && \
    echo 'root:pass' | chpasswd

# Install core networking and system packages
RUN dnf install --setopt=keepcache=0 -y \
    systemd-udev \
    dbus \
    NetworkManager \
    kernel-modules \
    linux-firmware \
    dracut-network \
    iproute \
    lm_sensors && \
    dnf clean all && \
    rm -rf /var/cache/dnf

